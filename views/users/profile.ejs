<!DOCTYPE html>
<html lang="en" class="h-100">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Login authentication with Express, MySQL and Passport"
    />
    <meta name="author" content="ReuelO" />
    <title>Profile</title>

    <!-- Bootstrap -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css"
    />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>

    <!-- FontAwesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />

    <!-- Favicons -->
    <!-- <link rel="icon" href="/images/favicon.ico" /> -->

    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>

  <body class="d-flex h-100 text-center text-white bg-dark">
    <div class="d-flex w-100 h-100 py-2 px-5 mx-auto flex-column">
      <header class="mb-auto">
        <div>
          <h3 class="float-md-start mb-0">EMP Auth</h3>
          <nav class="nav nav-masthead justify-content-center float-md-end">
            <a class="nav-link" href="/users/<%= user.id %>">Dashboard</a>
            <a
              class="nav-link active"
              aria-current="page"
              href="/users/<%= user.id %>/profile"
              >Profile</a
            >
            <a class="nav-link text-danger" href="/logout">Logout</a>
          </nav>
        </div>
      </header>

      <main class="p-0">
        <div
          class="container-fluid p-5 border border-2 border-light"
          style="max-width: 400px"
        >
          <h3 class="text-center text-white p-4">
            <i class="fa fa-user-check"></i> <%= heading %>
          </h3>

          <%- include ../flash_messages %> <% data.forEach(function(one){ %>
          <form
            class="form text-start"
            action="/users/<%= user.id %>/profile"
            method="POST"
            oninput='confirm.setCustomValidity(confirm.value != password.value ? "Passwords do not match." : "")'
          >
            <div class="col-md mb-3">
              <label for="username">Username</label>
              <input
                type="text"
                class="form-control"
                name="username"
                value="<%= one.username %>"
                autofocus
                required
              />
            </div>
            <div class="col-md mb-3">
              <button type="button" class="btn btn-danger" id="change">
                Change password
              </button>
              <div id="pass">
                <div class="col-md mb-3">
                  <label for="password">Change Password</label>
                  <input type="password" class="form-control" name="password" />
                </div>
                <div class="col-md mb-3">
                  <label for="confirm">Confirm Password</label>
                  <input type="password" class="form-control" name="confirm" />
                </div>
              </div>
              <script>
                $(document).ready(function () {
                  $("#pass").hide();
                  $("#change").click(function () {
                    $(this).hide();
                    $("#pass").show();
                  });
                });
              </script>
            </div>

            <button type="submit" class="w-100 btn btn-lg btn-warning mb-3">
              Update Profile
            </button>
          </form>
          <% }); %>
        </div>
      </main>

      <footer class="mt-auto text-white-50 bg-dark">
        <p class="mb-1">Developed by <b>ReuelO</b></p>
        <p>
          <a
            class="btn btn-sm btn-outline-light"
            href="https://github.com/ReuelO"
            target="_blank"
          >
            GitHub
          </a>
          <a
            class="btn btn-sm btn-outline-light"
            href="https://twitter.com/OmwengaReuel"
            target="_blank"
          >
            Twitter
          </a>
        </p>
      </footer>
    </div>
  </body>
</html>
